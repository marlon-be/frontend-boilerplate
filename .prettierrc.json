{
    "jsxSingleQuote": false,
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": true,
    "overrides": [
        {
            "files": "*.css",
            "options": {
                "plugins": [
                    "prettier-plugin-css-order"
                ],
                "cssDeclarationSorterOrder": "smacss",
                "trailingComma": "all",
                "semi": true,
                "singleQuote": false
            }
        }
    ]
}
